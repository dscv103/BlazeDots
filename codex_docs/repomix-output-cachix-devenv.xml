impl Display for Field {
    fn fmt(&self, f: &mut Formatter) -> fmt::Result {
        match self {
            Field::Int(i) => write!(f, "{}", i),
            Field::String(s) => write!(f, "{}", s),
        }
    }
}

fn store_path_to_name(path: &str) -> &str {
