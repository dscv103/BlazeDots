    makeWrapper ${cfg.stack.package}/bin/stack $out/bin/stack \
      ${lib.concatMapStringsSep " \\\n      " (arg: "--add-flags \"${arg}\"") cfg.stack.args}
  '';
  # ghc.version with removed dots
  ghcVersion = lib.replaceStrings [ "." ] [ "" ] cfg.package.version;
in
{
