  scripts.silly-example.exec = ''echo "{\"name\":\"$1\",\"greeting\":\"Hello $1!\",\"timestamp\":\"$(date -Iseconds)\"}" | jq '';
  scripts.silly-example.description = "creates JSON with provided arg and shows it with jq";

