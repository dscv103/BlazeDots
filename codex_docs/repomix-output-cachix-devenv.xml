    a.link {
        @apply text-dark-link;
    }

    a.link:hover {
        color: theme(colors.dark-accent-fg);
    }

    .inline-code {
        background-color: rgb(39, 42, 53);
        color: rgba(213, 216, 226, 0.82);
    }

    .md-logo img {
        content:url("/assets/logo-dark.webp");
    }
}

